<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DiagnosticoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/banner_textura_diagnostico_verde"
        android:gravity="bottom"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/mask_banners"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:text="Diagnostico institucional"
                android:textColor="@color/blanco"
                android:textStyle="bold"
                android:textSize="20dp" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="5dp"
                android:src="@drawable/logo_ita" />
        </LinearLayout>

    </LinearLayout>


    <androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_marginLeft="0dp"
    android:layout_marginTop="0dp"
    android:layout_marginRight="0dp"
    android:layout_weight="1"
    android:scrollbars="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/mask_rectangulo_borde2"
                android:gravity="center"
                android:padding="10dp"
                android:text="Relaciones de convivencia que se presenta al interior de la institucion"
                 />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                android:id="@+id/cv_diagnostico1"
                android:layout_width="0dp"
                android:layout_weight="1"
                    android:onClick="llamarEstudiateEstudiante"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:src="@drawable/d1"
                        android:scaleType="centerCrop"
                        android:layout_height="150dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_gravity="bottom"
                        android:background="@drawable/mask_banners"
                        android:gravity="bottom"
                        android:paddingLeft="10dp"
                        android:paddingStart="10dp"
                        android:paddingBottom="10dp"
                        android:text="Estudiante - Estudiante"
                        android:textColor="@color/blanco"
                        android:textSize="14dp"
                        android:textStyle="bold" />


                </RelativeLayout>
            </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_diagnostico2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:onClick="llamarEstudiateDocente"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="10dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="match_parent"
                            android:src="@drawable/d3"
                            android:scaleType="centerCrop"
                            android:layout_height="150dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_gravity="bottom"
                            android:background="@drawable/mask_banners"
                            android:gravity="bottom"
                            android:paddingLeft="10dp"
                            android:paddingStart="10dp"
                            android:paddingBottom="10dp"
                            android:text="Estudiante - Docente"
                            android:textColor="@color/blanco"
                            android:textSize="14dp"
                            android:textStyle="bold" />


                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_diagnostico3"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:onClick="llamarDocenteEstudiante"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="10dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="match_parent"
                            android:src="@drawable/d2"
                            android:scaleType="centerCrop"
                            android:layout_height="150dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_gravity="bottom"
                            android:background="@drawable/mask_banners"
                            android:gravity="bottom"
                            android:paddingLeft="10dp"
                            android:paddingStart="10dp"
                            android:paddingBottom="10dp"
                            android:text="Docente - Estudiante"
                            android:textColor="@color/blanco"
                            android:textSize="14dp"
                            android:textStyle="bold" />


                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_diagnostico4"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="10dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="llamarEstudianteAdministrativo"
                        >

                        <ImageView
                            android:layout_width="match_parent"
                            android:src="@drawable/d5"
                            android:scaleType="centerCrop"
                            android:layout_height="150dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_gravity="bottom"
                            android:background="@drawable/mask_banners"
                            android:gravity="bottom"
                            android:paddingLeft="10dp"
                            android:paddingStart="10dp"
                            android:paddingBottom="10dp"
                            android:text="Estudiante - Administrativos"
                            android:textColor="@color/blanco"
                            android:textSize="14dp"
                            android:textStyle="bold" />


                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_diagnostico5"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="10dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:onClick="llamarAdministrativoEstudiante"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="match_parent"
                            android:src="@drawable/d4"
                            android:scaleType="centerCrop"
                            android:layout_height="150dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_gravity="bottom"
                            android:background="@drawable/mask_banners"
                            android:gravity="bottom"
                            android:paddingLeft="10dp"
                            android:paddingStart="10dp"
                            android:paddingBottom="10dp"
                            android:text="Administrativos - Estudiante"
                            android:textColor="@color/blanco"
                            android:textSize="14dp"
                            android:textStyle="bold" />


                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_diagnostico6"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="10dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:onClick="llamarEstudianteDirectivo"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="match_parent"
                            android:src="@drawable/d6"
                            android:scaleType="centerCrop"
                            android:layout_height="150dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_gravity="bottom"
                            android:background="@drawable/mask_banners"
                            android:gravity="bottom"
                            android:paddingLeft="10dp"
                            android:paddingStart="10dp"
                            android:paddingBottom="10dp"
                            android:text="Estudiante - Directivos"
                            android:textColor="@color/blanco"
                            android:textSize="14dp"
                            android:textStyle="bold" />


                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_diagnostico7"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="10dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:onClick="llamarDirectivoEstudiante"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="match_parent"
                            android:src="@drawable/d5"
                            android:scaleType="centerCrop"
                            android:layout_height="150dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_gravity="bottom"
                            android:background="@drawable/mask_banners"
                            android:gravity="bottom"
                            android:paddingLeft="10dp"
                            android:paddingStart="10dp"
                            android:paddingBottom="10dp"
                            android:text="Directivo - Estudiante"
                            android:textColor="@color/blanco"
                            android:textSize="14dp"
                            android:textStyle="bold" />


                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_diagnostico7"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="10dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:onClick="llamarPadreFamilia"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="match_parent"
                            android:src="@drawable/d8"
                            android:scaleType="centerCrop"
                            android:layout_height="150dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_gravity="bottom"
                            android:background="@drawable/mask_banners"
                            android:gravity="bottom"
                            android:paddingLeft="10dp"
                            android:paddingStart="10dp"
                            android:paddingBottom="10dp"
                            android:text="Padres de familia"
                            android:textColor="@color/blanco"
                            android:textSize="14dp"
                            android:textStyle="bold" />


                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_diagnostico6"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="10dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:onClick="llamarOrdenGeneral"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="match_parent"
                            android:src="@drawable/d9"
                            android:scaleType="centerCrop"
                            android:layout_height="150dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_gravity="bottom"
                            android:background="@drawable/mask_banners"
                            android:gravity="bottom"
                            android:paddingLeft="10dp"
                            android:paddingStart="10dp"
                            android:paddingBottom="10dp"
                            android:text="Orden general"
                            android:textColor="@color/blanco"
                            android:textSize="14dp"
                            android:textStyle="bold" />


                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>




    </androidx.core.widget.NestedScrollView>




</LinearLayout>