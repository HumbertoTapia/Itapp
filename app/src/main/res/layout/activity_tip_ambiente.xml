<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".tips.TipAmbiente">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:src="@drawable/educacionambiental2"
            android:scaleType="centerCrop"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Educacíon Amiental"
            android:textColor="#FFFEFD"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="46dp"
            android:layout_marginLeft="160dp"



            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Todos los seres humanos jugamos un papel clave en el cuidado del planeta. Aquí te presentamos algunos tips que puedes utilizar en tu vida cotidiana "
            android:padding="25dp"
            android:gravity="center"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView

                android:id="@+id/iv_reciclaje"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/tipsam1"
                android:layout_margin="10dp"
                />

            <ImageView
                android:id="@+id/iv_bolsa"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/tipsam2"
                android:layout_margin="10dp"
                />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/tipsam3"
                android:layout_margin="10dp"
                />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/tipsam4"
                android:layout_margin="10dp"
                />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/tipsam5"
                android:layout_margin="10dp"
                />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/tipsam6"
                android:layout_margin="10dp"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/tipsam7"
                android:layout_margin="10dp"
                />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/tipsam8"
                android:layout_margin="10dp"
                />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/tipsam9"
                android:layout_margin="10dp"
                />


        </LinearLayout>



    </LinearLayout>


</LinearLayout>