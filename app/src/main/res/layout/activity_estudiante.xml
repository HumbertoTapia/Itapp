                                    android:orientation="vertical"
                                    android:background="@drawable/mask_rectangulo1">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:text="9. Responsable cumpliendo con sus deberes de hijo y de  estudiante comprometido con su autoformación."
